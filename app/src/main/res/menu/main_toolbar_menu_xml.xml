<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="AlwaysShowAction,HardcodedText">
    <item
        android:id="@+id/menuitem_search"
        android:icon="@drawable/ic_search"
        android:title="Search Task"
        app:actionViewClass="androidx.appcompat.widget.SearchView"
        app:showAsAction="always|collapseActionView" />
    <item
        android:icon="@drawable/ic_sort"
        android:title="Sort Tasks"
        app:showAsAction="always">
        <menu>
            <item
                android:id="@+id/menuitem_sort_by_name"
                android:title="Sort By Name" />
            <item
                android:id="@+id/menuitem_sort_by_date_created"
                android:title="Sort By Date Created" />
        </menu>
    </item>

    <item
        android:id="@+id/menuitem_hide_completed_tasks"
        android:checkable="true"
        android:title="Hide completed task"
        app:showAsAction="never" />
    <item
        android:id="@+id/manuitem_delete_all"
        android:title="Delete all tasks"
        app:showAsAction="never" />
</menu>